    #scrollView .loadmore .loadmore-content {
      width: 100%; }
    #scrollView .loadmore text {
      vertical-align: middle; }
    #scrollView .loadmore .loadmore-top {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      margin-top: -50px;
      text-align: center;
      height: 50px;
      line-height: 50px; }
      #scrollView .loadmore .loadmore-top .loadmore-loading {
