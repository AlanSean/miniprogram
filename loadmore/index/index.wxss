      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container3 view {
        -webkit-animation: bouncedelay 1.2s infinite ease-in-out;
                animation: bouncedelay 1.2s infinite ease-in-out; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container1 .circle1 {
        -webkit-animation-delay: -1.1s;
                animation-delay: -1.1s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container1 .circle2 {
        -webkit-animation-delay: -0.9s;
                animation-delay: -0.9s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container1 .circle3 {
        -webkit-animation-delay: -0.6s;
                animation-delay: -0.6s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container1 .circle4 {
        -webkit-animation-delay: -0.3s;
                animation-delay: -0.3s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container2 .circle1 {
        -webkit-animation-delay: -1.1s;
                animation-delay: -1.1s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container2 .circle2 {
        -webkit-animation-delay: -0.8s;
                animation-delay: -0.8s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container2 .circle3 {
        -webkit-animation-delay: -0.5s;
                animation-delay: -0.5s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container2 .circle4 {
