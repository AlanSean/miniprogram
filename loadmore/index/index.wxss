      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container3 .circle2 {
        -webkit-animation-delay: -0.7s;
                animation-delay: -0.7s; }
      #scrollView .loadmore.is-dropped .loadmore-top .loadmore-text .spinner .container3 .circle3 {
        -webkit-animation-delay: -0.4s;
