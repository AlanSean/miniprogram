@-webkit-keyframes identifier {
  0%,
  100% {
    opacity: 1; }
  50% {
    opacity: 0.5; } }

@keyframes identifier {
  0%,
  100% {
    opacity: 1; }
  50% {
    opacity: 0.5; } }

@-webkit-keyframes bouncedelay {
  0%,
  100%,
  80% {
    opacity: 0.1; }
  40% {
    opacity: 1; } }

@keyframes bouncedelay {
  0%,
  100%,
  80% {
    opacity: 0.1; }
  40% {
    opacity: 1; } }

@-webkit-keyframes sacle {
  0%,
  100% {
    -webkit-transform: scale(1);
            transform: scale(1); }
  50% {
    -webkit-transform: scale(0.7);
            transform: scale(0.7); } }

@keyframes sacle {
  0%,
  100% {
    -webkit-transform: scale(1);
            transform: scale(1); }
  50% {
    -webkit-transform: scale(0.7);
            transform: scale(0.7); } }
